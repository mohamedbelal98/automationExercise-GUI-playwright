{
  "compileOnSave": false,
  "plugins": ["@typescript-eslint", "prettier"],
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./playwright.config.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*.spec.tsx",
    "**/*.spec.jsx",
    "eslint.config.mjs"
  ],
  "exclude": ["node_modules", "dist"]
}
